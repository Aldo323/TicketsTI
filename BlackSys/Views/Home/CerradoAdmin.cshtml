@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Section{
    
     <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Tickets Cerrados</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">

<table id="example" class="table table-striped table-bordered table-hover dt-responsive" style="width:100%">
    <thead>
        <tr>
            <th>Ticket</th>
            <th>Correo</th>
            <th>SubActivo</th>
            <th>Activo</th>
            <th>Fecha</th>
            <th>Departamento</th>
            <th>Telefono</th>
            <th>Estatus</th>
            <th>Ubicacion</th>
            <th>SLA Cat. Alta</th>
            <th>SLA Cat. Media</th>
            <th>SLA Cat. Baja</th>
            <th>Seguimiento</th>
        </tr>
    </thead>
</table>
</div>
</div>
</div>

<script>
      $(document).ready(function () {
            var table = $('#example').DataTable({
                "searching": true,
                "ajax": {
                    "url": "@System.Configuration.ConfigurationManager.AppSettings["Request"]/api/close",

                    "datatype": "json",
                    "contentType": "application/json; charset=utf-8",

                    "error": function (status) {
                        console.log(status);
                    }
                },
                "processing": true,
                "dataSrc": "",
                "columns": [

                    { "data": "IdSolicitud" },

                    { "data": "Correo" },

                    { "data": "Subactivo" },
                    { "data": "Activo" },
                    { "data": "Fecha_levantamiento" },
                   
                    { "data": "Departamento" },
                    { "data": "Telefono" },
                    {
                        "data": "Estatus",
                        "render": function (data, type, val) {
                            switch (data) {
                                case "ABIERTO":
                                    return '<p id="poster">ABIERTO</p>';
                                case "CERRADO":
                                    return '<font ><p>CERRADO</p><font>';
                                case "N.C":
                                    return '<p id="poster">N.C</p>';
                                default:
                                    return '' + data + '';
                            }
                        }
                    },
                   
                    { "data": "Ubicacion" },
                    { "data": "SLA_C_A" },
                    { "data": "SLA_C_M" },
                    { "data": "SLA_C_B" },

                    {
                        "data": "IdSolicitud", "width": "50px",
                        "render": function (data) {
                            return '<a  href="@System.Configuration.ConfigurationManager.AppSettings["Request"]/Mensajes/Create/' + data + '">link</a>';
                        }
                    }
                ],
                "order": [[1, 'asc']],
            });

            $('#refresh_desk').click(function () {
                table.ajax.reload();
            });


        $('.tablecontainer').on('click', 'a.popup', function (e) {
            e.preventDefault();
            OpenPopup($(this).attr('href'));
        })
    });


</script>
}