@model BlackSys.Models.Mensajes
@{
    ViewBag.Title = "Seguimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
 Ticket # @ViewBag.Message
</h2>

    <h4>Seguimiento ha solicitudes</h4>
    <hr />

    @using (Html.BeginForm("Seguimiento", "Engineering", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(model => model.Id_Solicitud, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Id_Solicitud, new { htmlAttributes = new { @class = "form-control", @Value = 3 } })
                    @Html.ValidationMessageFor(model => model.Id_Solicitud, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email_user, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email_user, new { htmlAttributes = new { @class = "form-control", @Value = Session["User"] } })
                    @Html.ValidationMessageFor(model => model.Email_user, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mensaje, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Mensaje, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mensaje)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
