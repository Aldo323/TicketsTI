@using BlackSys.Helpers
@model IEnumerable<BlackSys.Models.SubActivos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="page-title">
    SubActivos
    <small> Security</small>
</h3>
<p>
    @Html.ActionLink("Create New", "Alta_SubActivo")
</p>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user"></i>Administracion de SubActivos
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="fullscreen"> </a>
                </div>
                <div class="actions">
                    <div class="inputs pull-right">
                       
                    </div>
                   
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="sys-table" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Subactivos1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SLA_C_B)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SLA_C_M)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SLA_C_A)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Activos.Activo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subactivos1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SLA_C_B)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SLA_C_M)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SLA_C_A)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Activos.Activo)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit_SubActivo", new { id = item.IdSubactivos }) |
                                @Html.ActionLink("Details", "Edit_SubActivo", new { id = item.IdSubactivos }) |
                                @Html.ActionLink("Delete", "Borrar_Subactivo", new { id = item.IdSubactivos })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
 </div>
        @section Scripts{
            <script src="/Content/plugins/datatables/datatables.js" type="text/javascript"></script>
            <script src="/Content/plugins/datatables/datatables.min.js" type="text/javascript"></script>
            <script src="/Content/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>

        }

        @section topLevel{
            @{Html.RenderPartial("_RenderConfirm.Modal"); }
        }
